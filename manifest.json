{
  "manifest_version": 2,
  "name": "DPV Link Generator",
  "version": "1.0",
  "description": "Generate DPV links based on version and mode.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab"
  ]
}
